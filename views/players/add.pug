extends ../layout

block content
    h1 Add New Player
    form(action="/players/add",method="post")
        .form-group
            label(for="name") Player Name
            input#name(type="text", class="form-control", name="name")
        .form-group
            label(for="team") Player Team
            input#team(type="text", class="form-control", name="team")
        input(type="submit", class="btn btn-info")